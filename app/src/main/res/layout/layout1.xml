<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#FDFDFA"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_weight="1">
        <TextView
            android:textColor="#131313"
            android:id="@+id/textView"
            android:layout_width="141dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="17dp"
            android:text="Availabel Offline"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="93dp"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:gravity="right"
            android:text="3 of 25 stories"
            android:textColor="#605F5F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.985"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:layout_weight="6"
        android:orientation="vertical">
        <GridView
            android:id="@+id/gr_current_off"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:numColumns="3" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <TextView
                android:textColor="#0B0B0B"
                android:layout_width="97dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="23dp"
                android:layout_marginLeft="23dp"
                android:layout_marginBottom="10dp"
                android:text="Paid stories"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="220sp"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="7dp"
                android:text="1 Story"
                android:textColor="#605F5F" />
        </RelativeLayout>
        <GridView
            android:id="@+id/gr_current_off_2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:numColumns="3" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="3">

        <TextView
            android:textColor="#0E0E0E"
            android:id="@+id/textView3"
            android:layout_width="266dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="106dp"
            android:layout_marginRight="106dp"
            android:layout_marginBottom="86dp"
            android:gravity="left"
            android:text="Find more stories about"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:onClick="openTopic"
            android:id="@+id/textView5"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginEnd="178dp"
            android:layout_marginRight="178dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/border_title"
            android:gravity="center"
            android:text="love"
            android:textColor="#0B0A0A" />
        <TextView
            android:onClick="openTopic"
            android:id="@+id/textView6"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="256dp"
            android:layout_marginLeft="256dp"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/border_title"
            android:gravity="center"
            android:text="romance"
            android:textColor="#0B0A0A" />
        <TextView
            android:onClick="openTopic"
            android:id="@+id/textView4"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginEnd="294dp"
            android:layout_marginRight="294dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/border_title"
            android:gravity="center"
            android:text="M-TP"
            android:textColor="#0B0A0A" />
    </RelativeLayout>
</LinearLayout>